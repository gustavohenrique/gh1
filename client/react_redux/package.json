{
  "name": "gh1",
  "version": "0.0.3",
  "description": "Web client using React + Redux for the gh1.co API",
  "scripts": {
    "copy-dev": "cp app/dev.html dist/index.html && cp app/styles/*.css dist/ && cp -r app/fonts dist/",
    "copy-prod": "cp app/prod.html dist/index.html && cp app/styles/*.css dist/ && cp -r app/fonts dist/",
    "start": "npm run copy-dev && cp -r ./node_modules/bootstrap/dist/fonts dist/ && ./node_modules/.bin/webpack-dev-server --progress --colors",
    "build": "npm run copy-prod && NODE_ENV=production ./node_modules/.bin/webpack -p --display-error-details --config webpack.config.prod.js",
    "clean": "./node_modules/.bin/rimraf .tmp dist",
    "lint": "./node_modules/.bin/eslint app/scripts/**/*.js app/scripts/**/*.jsx tests/**/*.js; exit 0",
    "test": "./node_modules/.bin/mocha --compilers js:babel-core/register --require ./test/test_helper.js 'test/**/*_spec.@(js|jsx)'",
    "test:watch": "npm test -- --watch"
  },
  "author": "Gustavo Henrique <gustavo@gustavohenrique.net>",
  "repository": "git",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "dependencies": {
    "autoprefixer": "^6.3.4",
    "axios": "^0.9.1",
    "classnames": "^2.2.3",
    "immutable": "^3.7.6",
    "object-assign": "^4.0.1",
    "qrcode.react": "^0.6.0",
    "react": "^0.14.7",
    "react-addons-pure-render-mixin": "^0.14.7",
    "react-addons-test-utils": "^0.14.7",
    "react-copy-to-clipboard": "^4.0.2",
    "react-dom": "^0.14.7",
    "react-redux": "^4.4.1",
    "react-router": "^2.0.1",
    "redux": "^3.3.1",
    "redux-thunk": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "canvas": "^1.3.12",
    "chai": "^3.5.0",
    "chai-immutable": "^1.5.4",
    "css-loader": "^0.23.1",
    "eslint": "^2.5.1",
    "eslint-plugin-react": "^4.2.3",
    "jsdom": "^8.1.0",
    "mocha": "^2.4.5",
    "postcss-loader": "^0.8.2",
    "react-addons-test-utils": "^0.14.7",
    "react-hot-loader": "^1.3.0",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.1",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  }
}
